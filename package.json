{
  "name": "opa-pagamentos-node",
  "version": "1.1.0",
  "description": "Wrapper for Opa Pagamentos API calls",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "repository": "https://github.com/wmenegali/opa-wrapper.git",
  "author": "Willian <willian@anthor.com.br>",
  "license": "MIT",
  "scripts": {
    "start": "nodemon -L --exec ts-node src/index.ts",
    "build": "tsc --project tsconfig.json",
    "postinstall": "npm run build"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      {
        "plugins": [
          "@babel/plugin-proposal-class-properties"
        ]
      }
    ]
  },
  "nyc": {
    "all": true,
    "exclude": [
      "lib/**",
      "test/**"
    ],
    "per-file": true,
    "reporter": [
      "lcov"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@types/node": "^12.0.10",
    "nodemon": "^1.18.10",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0"
  }
}
